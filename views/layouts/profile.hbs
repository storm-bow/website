<!DOCTYPE html>
{{{body}}}
<html lang="en">

<head>
    {{>common-header}}
    <link rel="stylesheet" href="CSS/stylesheet-profile.css">
    <link rel="stylesheet" href="CSS/register.css">
</head>

<body>
    {{>(whichNavbar user)}}
    <section id="form-section">
        <div class="container-fluid">
            <div class="row  justify-content-center">
                <div id="logout-col" class="col-2">
                    <div class="row align-items-center" id="logout-container">
                        <div class="col-12">
                            <a class="link" href="logout">
                                <button class="form-control form-control-sm s-button" id="logout-button">log-out</button>
                            </a>
                        </div>

                    </div>

                </div>
                <div class="col-6">
                    <div id="settings-container">
                        <form id="update-profile-form" method="post">
                            <div class="form-row">
                                <div class="form-group col-6">
                                    <label>First Name</label>
                                    <input type="text" class="form-control" name="first_name" value={{user.first_name}}>
                                </div>
                                <div class="form-group col-6">
                                    <label>Last Name</label>
                                    <input type="text" class="form-control" name="last_name" value={{user.last_name}}>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" placeholder="ti@eipes.com" name="email"
                                    value={{user.email}}>
                            </div>
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" class="form-control" name="phone" value={{user.phone}}>
                            </div>
                            <div class="form-group">
                                <label>New Password</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                            <div class="form-group">
                                <label>New Password Repeat</label>
                                <input type="password" class="form-control" name="vpassword">
                            </div>
                            <div id="old-password-container" class="form-group">
                                <label>Old Password</label>
                                <input type="Old Password" class="form-control" name="opassword">
                            </div>

                            <div class="form-group">
                                <input type="submit" class="form-control form-control-sm s-button" value="UPDATE"
                                    id="update-button">
                            </div>
                        </form>
                        {{#each error}}
                        <p class="error">{{this.msg}}</p>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>

    </section>
    {{>about-section}}
</body>

</html>